#include <stdio.h>

int main()
{
	//Pedindo e fornecendo inputs ao programa
	int a;
	int b;
	int resultado;
	
	printf('Escolha dois números inteiros para apresentar a soma, subtração, multiplicação e divisão deles:');
	//Realizando operações 
	scanf('%d%d, a,b');
	resultado = a + b;
	printf('A soma dos inteiros é: %d', resultado);
	resultado = a - b;
	printf('A subtração dos inteiros é: %d', resultado);
	resultado = a*b;
	printf('A multiplicação dos inteiros é: %d', resultado);
	resultado = a/b;
	printf('A divisão dos inteiros é: %d', resultado);
	
	return 0;
	
}